<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.infinigentconsulting"
    android:versionCode="1"
    android:versionName="1.1.0.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_splash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InfinigentConsulting.NoActionBar"
        android:usesCleartextTraffic="true" >
        <activity android:name="com.example.infinigentconsulting.AuditedSchemeDetails" />
        <activity android:name="com.example.infinigentconsulting.StatusActivity" />
        <activity android:name="com.example.infinigentconsulting.SettingsActivity" />
        <activity android:name="com.example.infinigentconsulting.ImageBrowsingActivity" />
        <activity
            android:name="com.example.infinigentconsulting.SchemeDetailsActivity"
            android:isScrollContainer="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.infinigentconsulting.OutletDetailsActivity"
            android:isScrollContainer="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.infinigentconsulting.SignaturePadActivity"
            android:isScrollContainer="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.infinigentconsulting.SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.infinigentconsulting.LoginActivity"
            android:isScrollContainer="true"
            android:theme="@style/Theme.InfinigentConsulting.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.infinigentconsulting.MainActivity"
            android:theme="@style/Theme.InfinigentConsulting.NoActionBar" />
        <activity android:name="com.example.infinigentconsulting.HygieneAuditActivity" />
        <activity android:name="com.example.infinigentconsulting.SchemeAuditActivity" />
        <activity android:name="com.example.infinigentconsulting.PreviewActivity" />
    </application>

</manifest>