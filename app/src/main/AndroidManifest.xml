<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.infinigentconsulting">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_splash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InfinigentConsulting.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".AuditedSchemeDetails"></activity>
        <activity android:name=".StatusActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ImageBrowsingActivity" />
        <activity
            android:name=".SchemeDetailsActivity"
            android:isScrollContainer="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".OutletDetailsActivity"
            android:isScrollContainer="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SignaturePadActivity"
            android:isScrollContainer="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:isScrollContainer="true"
            android:theme="@style/Theme.InfinigentConsulting.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.InfinigentConsulting.NoActionBar" />
        <activity android:name=".HygieneAuditActivity" />
        <activity android:name=".SchemeAuditActivity" />
        <activity android:name=".PreviewActivity" />
    </application>

</manifest>